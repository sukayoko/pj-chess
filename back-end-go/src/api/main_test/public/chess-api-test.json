{
  "openapi": "3.0.0",
  "info": {
    "title": "CHESS API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://192.168.56.18:38080/api/v1",
      "description": "Development Server"
    },
    {
      "url": "https://api.example.com",
      "description": "Production Server"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check endpoint",
        "description": "Returns the status of the API server.",
        "responses": {
          "200": {
            "description": "Server is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    }
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "in": "header",
            "name": "Origin",
            "schema": {
              "type": "string"
            },
            "required": false
          },
          {
            "in": "header",
            "name": "Access-Control-Allow-Origin",
            "schema": {
              "type": "string"
            },
            "required": false,
            "example": "*"
          }
        ]
      }
    },
    "/ping": {
      "get": {
        "summary": "Health check endpoint",
        "description": "Returns the status of the API server.",
        "responses": {
          "200": {
            "description": "Server is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    }
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "in": "header",
            "name": "Origin",
            "schema": {
              "type": "string"
            },
            "required": false
          },
          {
            "in": "header",
            "name": "Access-Control-Allow-Origin",
            "schema": {
              "type": "string"
            },
            "required": false,
            "example": "*"
          }
        ]
      }
    }
  }
}